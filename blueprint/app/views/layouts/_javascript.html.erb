<%- # Javascript at the bottom for fast page loading -%>

<%= javascript_include_tag :application %>

<% if flash[:alert] %>
  <script>$().ready(notify('<%= flash[:alert] %>'), 5000);</script>
<% elsif flash[:notice] %>
  <script>$().ready(notify('<%= flash[:notice] %>'), 5000);</script>
<% elsif flash[:warning] %>
  <script>$().ready(notify('<%= flash[:warning] %>'), 5000);</script>
<% end %>

<%= yield :javascripts %>

